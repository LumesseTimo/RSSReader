@using System.Text;

@{
    WebClient client = new WebClient();

    // set the user agent to IE6
    client.Headers.Add("user-agent", "Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; .NET CLR 1.0.3705;)");
    try
    {
        string xmlText = Encoding.UTF8.GetString(Encoding.Default.GetBytes(client.DownloadString("http://www.bmwi.de/SiteGlobals/BMWI/Functions/RSSFeed/DE/RSSFeed-Kompakt.xml;jsessionid=649E32E3D68C44F9A088A1CACD230538")));
        xmlText = xmlText.Replace("<![CDATA[", "");
        xmlText = xmlText.Replace("]]>", "");
        //xmlText = xmlText.Replace("<p>", "");
        //xmlText = xmlText.Replace("</p>", "");
        // write contents of the webpage
        @Html.Raw(xmlText);
    }
    catch (WebException we)
    {
        // WebException.Status holds useful information
        Console.WriteLine(we.Message + "\n" + we.Status.ToString());
    }
    catch (NotSupportedException ne)
    {
        // other errors
        Console.WriteLine(ne.Message);
    }
}